@model OrderingPizza.Models.Pizza.PizzaOrderModel

@{
    ViewBag.Title = "Choose your pizza";
}

<h2>@ViewBag.Title</h2>

<p>@Model.Name</p>

@using (Html.BeginForm("Order", "Pizza", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
