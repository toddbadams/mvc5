@model lostsocks.Models.Socks.SockModel[]

@{
    ViewBag.Title = "My Socks";

}

<div class="row">
    <h2>@ViewBag.Title</h2>
    <p class="pull-right">@Html.ActionLink("Add a Sock", "Add", "Socks", routeValues: null, htmlAttributes: new { id = "addsock", @class = "btn btn-primary" })</p>
</div>
<div class="row">
    @foreach (var sock in Model)
    {
        string imageBase64 = Convert.ToBase64String(sock.Image);
        string imageSrc = string.Format("data:image/gif;base64,{0}", imageBase64);
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail">
                <a href="#" class="thumbnail">
                    <img src="@imageSrc" alt="@sock.Name" style="width: 260px; height: 180px;">
                </a>
                <div class="caption">
                    <h3>@sock.Name</h3>
                    <p>@sock.Description</p>
                    <p class="pull-right">@Html.ActionLink("Kill me", "Delete", "Socks", routeValues: new { id = sock.Id }, htmlAttributes: new { id = "deletesock", @class = "btn btn-primary" })</p>

                </div>
            </div>
        </div>
    }
</div>
